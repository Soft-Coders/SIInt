CREATE TABLE CUENTA_REFERENCIA (ID INTEGER NOT NULL, estado VARCHAR2(20), fecha_apertura DATE, nombre_banco VARCHAR2(20) NOT NULL, pais VARCHAR2(20), saldo NUMBER(12,0) NOT NULL, sucursal VARCHAR2(20), PRIMARY KEY (ID))
